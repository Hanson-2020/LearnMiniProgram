<!--pages/text/text.wxml-->
<text>你好啊~\n</text>
<text>Hello World\n</text>

<!-- selectable:true -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable="true">这是一个测试是否可以长按的文字！\n\n</text>

<!-- space:决定文本空格的大小 -->
<!-- ensp：半个中文字符大小 -->
<!-- emsp:一个中文字符大小 -->
<text>Hanson HH\n</text>
<text space="nbsp">Hanson HH\n</text>
<text space="emsp">Hanson HH\n</text>
<text space="ensp">Hanson HH\n</text>

<!-- decode属性:是否解码文本 -->
<text>5 &gt; 3 \n</text>
<text decode>5 &gt; 3</text>